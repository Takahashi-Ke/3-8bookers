<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
   <% if @book.errors.any? %>
      <div class="error">
        <h5>2 errors prohibited this book from being saved:</h5>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="new-title">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>
    <div class="new-body">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Update Book', class:"sub-btn" %>
    </div>
 <% end %>

