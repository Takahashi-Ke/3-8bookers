<!---- 投稿閲覧  ---->
<div class="index">
  <h1>Books</h1>

  <table class="book-table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <tbody class="book-list">
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show', book_path(book.id), {class:"link"} %></td>
          <td><%= link_to 'Edit', edit_book_path(book.id), {class:"link"} %></td>
          <td><%= link_to 'Destroy', book_path(book.id), {method: :delete, data:{confirm:'本当に削除しますか？'}, class:"link"} %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>


<!---- 新規投稿フォーム ---->
<div class="new">
  <h3>New Book</h3>
  <%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
      <div class="error">
        <h5>2 errors prohibited this book from being saved:</h5>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="new-title">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>
    <div class="new-body">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Create Book', class:"sub-btn" %>
    </div>
<% end %>
</div>